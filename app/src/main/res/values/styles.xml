<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="marcador">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/oval</item>
        <item name="android:layout_marginBottom">-90dp</item>
        <item name="android:alpha">1</item>


    </style>

    <style name="botonguia">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/fuentespyro</item>
        <item name="android:background">@drawable/button_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">4</item>
        <item name="android:alpha">0</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="comenzar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="exit_guide">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:layout_margin">40dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:fontFamily">@font/fuentespyro</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="avanzar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/boton_avance</item>
        <item name="android:fontFamily">@font/fuentespyro</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_marginTop">-50dp</item>
    </style>

    <style name="titulo">
        <item name="android:padding">20dp</item>
        <item name="android:fontFamily">@font/fuentespyro</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">70sp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="texto_Normal">
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="texto_boton">
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:fontFamily">@font/fuentespyro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>